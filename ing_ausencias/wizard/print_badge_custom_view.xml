<?xml version="1.0" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="ing_credential_custom_wz_form">
            <field name="name">ing.credential.custom.wz.form</field>
            <field name="model">ing.credential.custom.wz</field>
            <field name="arch" type="xml">
                <form>
                    <label for="employee_id"/>
                    <h2>
                        <field name="employee_id" options="{'no_open': True}"/>
                    </h2>
                    <group>
                        <group>
                            <field name="dni"/>
                            <field name="cuit"/>
                            <field name="address"/>
                            <field name="phone"/>
                        </group>
                        <group>
                            <field name="job"/>
                            <field name="type_contract"/>
                            <field name="department"/>
                            <field name="birthdate"/>
                        </group>
                    </group>

                    <footer>
                        <button name='print_credential_custom' string="Aceptar" class="btn-primary" type="object"/>
                        <button special="cancel" string="Cerrar"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>