<odoo>
    <record id="view_hr_employee_form_li" model="ir.ui.view">
        <field name="name">hr.employee.form.li</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <!-- Pestaña Psicofísicos -->
            <!--<xpath expr="//sheet/notebook/page[last()]" position="before">-->
            <xpath expr="//sheet/notebook/page[@name='hr_settings']" position="after">
                <page string="Psicofísicos">
                    <group>
                        <field name="fecha_examen_li"/>
                        <field name="fecha_dictamen_li"/>
                        <field name="fecha_vigencia_li"/>
                        <field name="dictamen"/>
                        <!--<field name="vigencia_alertada"/>-->
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
